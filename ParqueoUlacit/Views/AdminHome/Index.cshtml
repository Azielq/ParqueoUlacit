@{
    ViewBag.Title = "Panel de Administración";
}

<div class="admin-dashboard">
    <div class="container">
        <!-- Encabezado animado -->
        <div class="header-container text-center">
            <div class="title-wrapper">
                <h2 class="admin-title">Panel de <span>Control</span></h2>
                <div class="admin-subtitle">Sistema de Parqueo ULACIT</div>
            </div>
            <div class="admin-divider"></div>
        </div>

        <!-- Tarjetas de administración -->
        <div class="row mt-5">
            <!-- Tarjeta de Usuarios -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="feature-content">
                        <h3>Usuarios</h3>
                        <p>Gestión de cuentas y permisos de usuarios del sistema</p>
                        
                            <div class="mb-2">
                                <a href="@Url.Action("Create", "Usuarios")" class="pulse-button">
                                    <span>Agregar Usuario</span>
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>

                            <div>
                                <a href="@Url.Action("Index", "Usuarios")" class="pulse-button">
                                    <span>Editar Usuario</span>
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                </div>
            </div>

            <!-- Tarjeta de Vehículos -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                    <div class="feature-content">
                        <h3>Vehículos</h3>
                        <div>
                            <p>Registro y control de vehículos autorizados para parqueo</p>
                            <a href="@Url.Action("Create", "Vehiculo")" class="pulse-button">
                                <span>Agregar Vehículo</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                        <div>
                            <a href="@Url.Action("Index", "Vehiculo")" class="pulse-button">
                                <span>Editar Usuario</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta de Parqueos -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-p-square-fill"></i>
                    </div>
                    <div class="feature-content">
                        <h3>Parqueos</h3>
                        <p>Administración de espacios de estacionamiento disponibles</p>
                        <div>
                        <a href="@Url.Action("Create", "Parqueo")" class="pulse-button">
                            <span>Agregar Parqueo</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                        </div>
                        <div>
                            <a href="@Url.Action("Index", "Parqueo")" class="pulse-button">
                                <span>Editar Usuario</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

