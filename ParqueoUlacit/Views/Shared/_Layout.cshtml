<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ULACIT Parking</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Añadir Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <i class="bi bi-car-front-fill fs-3"></i>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <!-- Botones de sesión y admin en un contenedor separado -->
                <div class="nav-buttons">
                    @if (Session["UsuarioId"] != null)
                    {
                        <!-- Botón de administrador -->
                        if (Session["RolID"] != null && Session["RolID"].ToString() == "1")
                        {
                            <a href="@Url.Action("Index", "AdminHome")" class="nav-pulse-button me-3">
                                <span>Panel Admin</span>
                                <i class="bi bi-speedometer2"></i>
                            </a>
                        }

                        <!-- Botón de Oficial de Seguridad -->
                        if (Session["RolID"] != null && Session["RolID"].ToString() == "2")
                        {
                            <a href="@Url.Action("Index", "SeguridadHome")" class="nav-pulse-button me-3">
                                <span>Panel Oficial</span>
                                <i class="bi bi-shield-check"></i>
                            </a>
                        }

                        <!-- Botón de cierre de sesión -->
                        <a href="@Url.Action("Logout", "Login")" class="nav-pulse-button-inverse">
                            <span>Cerrar Sesión</span>
                            <i class="bi bi-box-arrow-right"></i>
                        </a>
                    }
                    else
                    {
                        <!-- Botón de inicio de sesión -->
                        <a href="@Url.Action("Login", "Login")" class="nav-pulse-button">
                            <span>Iniciar Sesión</span>
                            <i class="bi bi-box-arrow-in-right"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer ahora fuera del container para que ocupe toda la anchura -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <!-- Columna de información principal -->
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="footer-heading">ParqueoULACIT</h5>
                    <p class="text-muted mb-4">Sistema de gestión de parqueos universitarios para una experiencia más eficiente y segura.</p>
                    <div class="d-flex align-items-center">
                        <a href="https://www.ulacit.ac.cr/" target="_blank" class="btn btn-outline-dark btn-sm">
                            Visitar ULACIT <i class="bi bi-box-arrow-up-right ms-1"></i>
                        </a>
                    </div>
                </div>

                <!-- Columna de enlaces rápidos -->
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="footer-heading">Enlaces</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none">Inicio</a></li>
                        <li class="mb-2"><a href="@Url.Action("About", "Home")" class="text-muted text-decoration-none">Acerca de</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")" class="text-muted text-decoration-none">Contacto</a></li>
                        <li><a href="https://www.ulacit.ac.cr/terminos-y-condiciones/" target="_blank" class="text-muted text-decoration-none">Términos y condiciones</a></li>
                    </ul>
                </div>

                <!-- Columna de contacto -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="footer-heading">Contacto</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt me-2"></i>
                            <span class="text-muted">Barrio Tournón, San José, Costa Rica</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2"></i>
                            <span class="text-muted">(506) 2523-4000</span>
                        </li>
                        <li>
                            <i class="bi bi-envelope me-2"></i>
                            <span class="text-muted">info@ulacit.ac.cr</span>
                        </li>
                    </ul>
                </div>

                <!-- Columna de redes sociales -->
                <div class="col-lg-3">
                    <h5 class="footer-heading">Síguenos</h5>
                    <div class="social-links">
                        <a href="https://www.facebook.com/ulacitcostarica?locale=es_LA" target="_blank" class="social-link" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://www.instagram.com/ulacitcr/?hl=en" target="_blank" class="social-link" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="https://x.com/ulacitcostarica" target="_blank" class="social-link" aria-label="Twitter">
                            <i class="bi bi-twitter-x"></i>
                        </a>
                        <a href="https://www.linkedin.com/school/ulacitcostarica/posts/?feedView=all" target="_blank" class="social-link" aria-label="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Línea divisoria -->
            <hr class="my-4">

            <!-- Copyright y política de privacidad -->
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year - ParqueoULACIT. Todos los derechos reservados.</p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <a href="https://www.ulacit.ac.cr/politica-de-privacidad/" target="_blank" class="text-muted text-decoration-none me-3">Política de Privacidad</a>
                    <a href="https://www.ulacit.ac.cr/politica-de-cookies/" target="_blank" class="text-muted text-decoration-none">Política de Cookies</a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>