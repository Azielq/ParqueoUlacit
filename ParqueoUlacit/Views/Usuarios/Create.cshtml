@model ParqueoUlacit.Models.TableViewModel.UsuarioTableViewModel
@{
    ViewBag.Title = "Crear Nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="section-title">Crear Nuevo Usuario</h2>
            <div class="section-divider"></div>
            <p class="text-muted mt-3">Complete la información para agregar un nuevo usuario al sistema.</p>
        </div>
    </div>

    <div class="form-container">
        <div class="form-header mb-4">
            <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Información del Usuario</h4>
        </div>
        @using (Html.BeginForm("Create", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, "Nombre Completo", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre completo", required = "required" })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Correo, "Correo Electrónico", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", type = "email", placeholder = "ejemplo@dominio.com", required = "required" })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Identificacion, "Número de Identificación", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Identificacion, new { @class = "form-control", placeholder = "Ingrese el número de identificación", required = "required" })
                        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaNacimiento, "Fecha de Nacimiento", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.FechaNacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RolID, "Rol del Usuario", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.RolID, (SelectList)ViewBag.RolID, "Seleccione un Rol", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.RolID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="info-box mb-4">
                <i class="bi bi-info-circle-fill me-2"></i> La contraseña por defecto será <strong>Ulacit123</strong>. El usuario deberá cambiarla en su primer inicio de sesión.
            </div>

            <div class="form-actions">
                <a href="@Url.Action("Index", "AdminHome")" class="pulse-button-inverse">
                    <span>Volver al Panel</span>
                    <i class="bi bi-arrow-left"></i>
                </a>
                <button type="submit" class="pulse-button ms-auto" id="btnGuardar">
                    <span>Guardar Usuario</span>
                    <i class="bi bi-person-plus-fill"></i>
                </button>
            </div>
        }
    </div>
</div>

