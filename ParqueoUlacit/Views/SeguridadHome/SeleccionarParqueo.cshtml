@model List<ParqueoUlacit.Models.TableViewModel.ParqueoTableViewModel>
@{
    ViewBag.Title = "Seleccionar Parqueo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Título de la sección -->
    <div class="row mb-4">
        <div class="col">
            <h2 class="section-title">Seleccionar Parqueo</h2>
            <div class="section-divider"></div>
            <p class="text-muted mt-3">Bienvenido, @Session["Nombre"]. Por favor seleccione el parqueo que desea supervisar.</p>
        </div>
    </div>

    <!-- Contenedor de la lista de parqueos -->
    <div class="form-container">
        <div class="form-header mb-4">
            <h4 class="mb-0"><i class="bi bi-p-square-fill me-2"></i>Parqueos Disponibles</h4>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                No hay parqueos disponibles en el sistema.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var parqueo in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="feature-box h-100">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h3 class="mb-1">@parqueo.Nombre_Parqueo</h3>
                                    <p class="mb-0 text-muted"><i class="bi bi-geo-alt-fill me-1"></i>@parqueo.Ubicacion</p>
                                </div>
                                <span class="badge bg-primary rounded-pill">ID: @parqueo.ParqueoID</span>
                            </div>

                            <div class="mb-3">
                                <h5 class="small text-uppercase text-muted mb-2">Espacios Disponibles</h5>
                                <div class="d-flex flex-wrap gap-2">
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-car-front-fill me-1"></i>
                                        Autos: @parqueo.Espacios_Carros
                                    </span>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-bicycle me-1"></i>
                                        Motos: @parqueo.Espacios_Moto
                                    </span>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-person-wheelchair me-1"></i>
                                        Ley 7600: @parqueo.Espacios_Ley7600
                                    </span>
                                </div>
                            </div>

                            <form method="post" action="@Url.Action("SeleccionarParqueo", "SeguridadHome")" class="mt-auto">
                                <input type="hidden" name="parqueoID" value="@parqueo.ParqueoID" />
                                <button type="submit" class="pulse-button w-100">
                                    <span>Seleccionar Parqueo</span>
                                    <i class="bi bi-check-circle-fill"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>