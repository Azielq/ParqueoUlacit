@model IEnumerable<ParqueoUlacit.Models.ViewModel.VehiculoViewModel>
@{
    ViewBag.Title = "Listado de Vehículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="section-title">Gestión de Vehículos</h2>
            <div class="section-divider"></div>
            <p class="text-muted mt-3">Administre los vehículos registrados en el sistema.</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center bg-light py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-car-front-fill me-2"></i>Vehículos Registrados
            </h5>
            <a href="@Url.Action("Create", "Vehiculo")" class="btn btn-success btn-sm ms-auto">
                <i class="bi bi-plus-circle-fill me-1"></i> Nuevo Vehículo
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Marca</th>
                            <th>Color</th>
                            <th>Placa</th>
                            <th>Tipo</th>
                            <th>Usuario</th>
                            <th>Ley 7600</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var vehiculo in Model)
                            {
                                <tr>
                                    <td>@vehiculo.VehiculoID</td>
                                    <td>@vehiculo.Marca</td>
                                    <td>@vehiculo.Color</td>
                                    <td>@vehiculo.NumeroPlaca</td>
                                    <td>@vehiculo.Tipo</td>
                                    <td>@vehiculo.UsuarioID</td>
                                    <td>
                                        @if (vehiculo.UsaEspacioLey7600.GetValueOrDefault())
                                        {
                                            <span class="badge bg-primary">Sí</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (vehiculo.Estado == "Activo")
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Editar", "Vehiculo", new { id = vehiculo.VehiculoID })" class="btn btn-primary btn-sm me-1" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" title="Eliminar"
                                                onclick="prepareDelete(@vehiculo.VehiculoID, '@vehiculo.Marca @vehiculo.NumeroPlaca')"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="bi bi-info-circle me-2"></i> No hay vehículos registrados en el sistema.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light py-3">
            <div class="d-flex align-items-center">
                <small class="text-muted">Mostrando @Model.Count() vehículo(s)</small>
                <a href="@Url.Action("Index", "AdminHome")" class="pulse-button-inverse ms-auto">
                    <span>Volver al Panel</span>
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar el vehículo <strong id="deleteVehicleName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Advertencia:</strong> Esta acción eliminará también todos los registros de bitácora e intentos fallidos asociados a este vehículo y no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-1"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function prepareDelete(id, name) {
            document.getElementById('deleteVehicleName').innerText = name;
            document.getElementById('deleteForm').action = '@Url.Action("Eliminar", "Vehiculo")/' + id;
        }
    </script>
}